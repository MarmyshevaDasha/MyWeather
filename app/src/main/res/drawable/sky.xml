<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="-10dp"
        android:right="-10dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="#3ACADC" />
            <corners
                android:topLeftRadius="80dp"
                android:topRightRadius="80dp" />

        </shape>
    </item>
    <item android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#60D0DD" />
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp" />

        </shape>
    </item>
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#80DBE6" />
            <corners
                android:topLeftRadius="45dp"
                android:topRightRadius="45dp" />

        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#ADE4ED" />
            <size
                android:width="20dp"
                android:height="10dp" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />

        </shape>
    </item>

</layer-list>